<html lang="en">
    <%- include ('./partials/head.ejs') %>
    <body>
    <%- include ('./partials/header.ejs') %>
    <div class="flex-col items-center" > 
    <div class="main m-auto">
    <div class="create-recipe content">
      <form action="/create" enctype="multipart/form-data" method="POST">
        <label for="title">Recipe title:</label>
        <input type="text" id="title" name="title" required>
        <label for="cooker">Cooker:</label>
        <input type="text" id="cooker" name="cooker" required>
        <label for="time">Cooking time:</label>
       <!--
        <input id="time" type="range" min="0" max="360" value="60" step="15" oninput="amount.value=rangeInput.value" required />
        <input id="time" type="number" name="time" value="60" min="0" max="360" step="15" oninput="rangeInput.value" />

         --> 
        <input type="number" id="time" name="time" > 
        <label for="difficulty">Difficulty:</label>
        <select id="difficulty" name="difficulty" required>
          <option value="Easy">Easy</option>
          <option value="Medium">Medium</option>
          <option value="Hard">Hard</option>
          </select><br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <label for="imageUpload">Add a picture of your recipe</label>
        <input type="file" class="form-control"  id= "imageUpload" value="imageUpload" name="imageUpload" accept="image/*">
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
    </main>
  </main>

  <%- include("./partials/footer.ejs") %>
</body>


</html>