        <main class="px-16 py-6 bg-gray-50 lg:w-3/5	">
            <div class="flex justify-center items-center md:justify-end">
                <a  href="#"class="btn text-white bg-primary border-primary border-2 hover:bg-white hover:text-primary transition ease-out duration-500">Log in</a>
                <a href="#" class="btn text-primary ml-2 border-primary border-2 hover:bg-primary hover:text-white transition ease-out duration-500">Sign up</a>
            </div>
            <header>
                <h2 class="text-gray-700 text-3xl font-semibold mt-10">My Recipes</h2>
                <h3 class="text-primary  text-xl font-semibold">For all</h3>
            </header>

            <div>
                <h4 class="font-bold mt-12 pb-2 border-b border-gray-200">Latest Recipes</h4>

                <a href=""></a>
            <div class="mt-8 grid gap-10 md:grid-cols-3" >
                <!--cards-->
                
                <% if(recipes.length > 0 ) { %>
                    <% recipes.forEach(recipe => { %>
                        <a href="/recipe/<%= recipe._id %>"> 
                            <div class="card">
                            <img src= "../images/<%= recipe.srcImg %>" class="w-full object-cover">
                            <div class="p-4">
                                <h2 class="title"><%= recipe.title %></h2>
                                <span class="block text-gray-500 text-sm">Recipe by <%= recipe.cooker %></span>
                                <div class="mt-1 opacity-70 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                  </svg>
                                  <span class="text-gray-600  text-xs"><%= recipe.time %> mins</span>
                                </div>
                                <div class="mt-1  flex items-center opacity-70">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 opacity-70"  viewBox="0 0 24 24"
                                    ><path d="M3.7 11.3H8v7.9H3.7zm6.5-2.7h4.3v10.6h-4.3zm6.5-4.4v15H21v-15h-4.3zm3.5 14.2h-2.7V5h2.7v13.4z"></path></svg>
                                    <span class="text-gray-600  text-xs"><%= recipe.difficulty %></span>
                                </div>
                            </div>
                            <div class="badge">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                  </svg>
                            </div>
                        </div>
                    </a>
                  
                <%  }) %>

               <% }else { %>
                    <p> There is actually no recent recipes...</p>
                    <%  } %>


